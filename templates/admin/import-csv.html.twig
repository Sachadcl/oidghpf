{% extends 'base.html.twig' %}

{% block title %}ENI Sorties - Importer utilisateurs{% endblock %}

{% block body %}
    <section class="bg-white dark:bg-gray-900">
        <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Importer des utilisateurs via fichier CSV</h2>

            {{ form_start(importForm, {'attr': {'class': 'grid gap-4 mb-4 sm:grid-cols-2 sm:gap-6 sm:mb-5'}}) }}
            <div class="w-full">
                {{ form_label(importForm.csvFile, 'Selectionnez votre fichier CSV', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                <div class="block mb-2 text-sm font-medium text-red-600 dark:text-red-500">
                    {{ form_errors(importForm.csvFile) }}
                </div>
                {% if error %}
                    <div class="block mb-2 text-sm font-medium text-red-600 dark:text-red-500">{{ error }}</div>
                {% endif %}
                {{ form_widget(importForm.csvFile, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500', 'placeholder': 'Pseudo'}}) }}
            </div>

            <div class="flex items-center space-x-4 sm:col-span-2">
                <button type="submit" class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                    Importer
                </button>
            </div>
            {{ form_end(importForm) }}
        </div>
    </section>
{% endblock %}