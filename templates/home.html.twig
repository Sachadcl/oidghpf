{% extends 'base.html.twig' %}

{% block title %}ENI Sorties - Accueil
{% endblock %}

{% block body %}

	{% if app.user %}
		<section class="bg-gray-50 dark:bg-gray-900 py-6 flex items-center">
			<div class="max-w-screen-xl px-4 mx-auto lg:px-12 w-full">
				<div class="relative bg-white shadow-md dark:bg-gray-800 sm:rounded-lg">
					<form class="flex flex-col" methods="GET" action="{{ url('main_search') }}">
						<div class="flex flex-col items-center justify-between p-4 space-y-3 md:flex-row md:space-y-0 md:space-x-4">
							<div class="w-full md:w-1/4">
								<label for="simple-search" class="sr-only">Search</label>
								<div class="relative w-full">
									<div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
										<svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
											<path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path>
										</svg>
									</div>
									<input type="text" name="name" id="simple-search" class="block w-full p-2 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Le nom de la sortie contient">
								</div>
							</div>
							<span class="mx-4 text-gray-500 dark:text-gray-300">Entre</span>
							<div id="date-range-picker" date-rangepicker class="flex items-center">
								<div class="relative">
									<div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
										<svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
											<path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"></path>
										</svg>
									</div>
									<label for="datepicker-range-start"></label><input id="datepicker-range-start" name="start" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Date de début">

								</div>
								<span class="mx-4 text-gray-500 dark:text-gray-300">et</span>
								<div class="relative">
									<div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
										<svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewbox="0 0 20 20">
											<path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"></path>
										</svg>
									</div>
									<label for="datepicker-range-end"></label><input id="datepicker-range-end" name="end" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" placeholder="Date de fin">
								</div>
							</div>
							<div class="relative w-40">
								<select id="countries" name="campusId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-300 dark:focus:ring-primary-500 dark:focus:border-primary-500">

									{% for campus in campuses %}
										<option class="dark:text-gray-300" value={{ campus.id }}>{{ campus.campusName }}</option>
									{% endfor %}

								</select>
							</div>
							<div class="flex justify-end w-full md:w-auto">
								<button type="submit" class="flex items-center justify-center px-4 py-2 text-sm font-medium text-white rounded-lg bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 focus:outline-none dark:focus:ring-primary-800">
									Rechercher
								</button>
							</div>
						</div>
						<div class="px-4">
							<div class="w-full border-t border-gray-200 dark:border-gray-600 my-2"></div>
						</div>
						<div class="flex flex-wrap items-center justify-start p-4 space-x-4">
							<label class="flex items-center">
								<input id="default-checkbox" type="checkbox" name="isOrganizer" value="true" class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
								<label for="default-checkbox" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Sorties dont je
									                                    suis l'organisateur</label>
							</label>
							<label class="flex items-center">
								<input type="checkbox" id="participantCheckbox" name="isParticipant" class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
								<label for="participantCheckbox" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Sorties
									                                    auxquelles je suis inscrit</label>
							</label>
							<label class="flex items-center">
								<input type="checkbox" id="notParticipantCheckbox" name="notParticipant" class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
								<label for="notParticipantCheckbox" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Sorties
									                                    auxquelles je ne suis pas inscrit</label>
							</label>
							<label class="flex items-center">
								<input id="default-checkbox3" type="checkbox" name="finishedOutings" class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">

								<label for="default-checkbox3" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Sorties
									                                    passées</label>
							</label>
							<a href="{{ path('app_outing_new') }}" class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
								Créer une sortie
							</a>
							<a href="{{ path('main_home') }}" class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 flex items-center justify-center">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<polyline points="23 4 23 10 17 10"></polyline>
									<polyline points="1 20 1 14 7 14"></polyline>
									<path d="M3.51 9a9 9 0 0114.36-5.36L23 10M1 14l5.64 5.64A9 9 0 0020.49 15"></path>
								</svg>
							</a>
						</div>
					</form>
				</div>
			</div>
		</section>

		<section class="bg-gray-50 dark:bg-gray-900 flex justify-center pb-6">
			<div class="relative overflow-x-auto shadow-md sm:rounded-lg w-full max-w-6xl">
				<table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
					<thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
						<tr>
							<th scope="col" class="px-6 py-3">
								Nom de la sortie
							</th>
							<th scope="col" class="px-6 py-3">
								Date de la sortie
							</th>
							<th scope="col" class="px-6 py-3">
								Clôture
							</th>
							<th scope="col" class="px-6 py-3">
								Inscrits/Places
							</th>
							<th scope="col" class="px-6 py-3">
								Etat
							</th>
							<th scope="col" class="px-6 py-3">
								Inscrit
							</th>
							<th scope="col" class="px-6 py-3">
								Organisateur
							</th>
							<th scope="col" class="px-6 py-3">
								Actions
								<span class="sr-only">Edit</span>
							</th>
						</tr>
					</thead>
					<tbody>
						{% include 'outing/_list.html.twig' with {'outings': outings} %}
					</tbody>
				</table>
			</div>

			<!-- Main modal -->
			{% include 'components/modal.html.twig' %}

		</section>

		<script>
			document.addEventListener("DOMContentLoaded", function () {
const participantCheckbox = document.getElementById("participantCheckbox");
const notParticipantCheckbox = document.getElementById("notParticipantCheckbox");

if (participantCheckbox && notParticipantCheckbox) {
participantCheckbox.addEventListener("change", function () {
if (participantCheckbox.checked) {
notParticipantCheckbox.disabled = true;
} else {
notParticipantCheckbox.disabled = false;
}
});
}

if (notParticipantCheckbox && participantCheckbox) {
notParticipantCheckbox.addEventListener("change", function () {
if (notParticipantCheckbox.checked) {
participantCheckbox.disabled = true;
} else {
participantCheckbox.disabled = false;
}
});
}
});
		</script>
	{% else %}
		<div class="bg-gray-100 flex items-center justify-center min-h-screen">


		<div id="greeting-card" class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg opacity-0 transition-opacity duration-1000">
			<h3 class="text-2xl font-bold  mb-4">
				Bonjour stagiaires & ex-stagiaires !
			</h3>
			<p class="text-gray-700">
				Rapprochez vous d'un administrateur pour toute demande d'inscription !
			</p>
		</div>
		</div>
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				setTimeout(function() {
					document.getElementById('greeting-card').classList.remove('opacity-0');
				}, 100);
			});
		</script>
	{% endif %}
{% endblock %}
