{% extends 'base.html.twig' %}

{% block body %}

    <section class="bg-white dark:bg-gray-900">
        <div class="max-w-2xl px-4 py-8 mx-auto lg:py-16">
            <div class="flex items-start">

                <div class="w-1/4 mr-4">
                    <img class="w-1/2 shadow-md" src="{{ app.user.profilePicture }}" alt="photo_de_profile"/>
                </div>

                <div class="w-3/4">
                    <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Mon profil</h2>

                    {{ form_start(userForm) }}
                    {{ form_row(userForm.email) }}
                    {{ form_row(userForm.username) }}
                    {{ form_row(userForm.last_name) }}
                    {{ form_row(userForm.first_name) }}
                    {{ form_row(userForm.telephone) }}
                    {{ form_row(userForm.new_password) }}
                    {{ form_row(userForm.new_confirmation) }}
                    {{ form_row(userForm.id_campus) }}
                    {{ form_row(userForm.profile_picture) }}
                    {{ form_row(userForm.current_password) }}

                    <div class="flex items-center space-x-4 mt-4">
                        <button type="submit"
                                class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
                            Enregistrer
                        </button>
                    </div>

                    {{ form_end(userForm) }}
                </div>
            </div>
        </div>
    </section>

{% endblock %}