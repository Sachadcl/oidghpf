<div id="crud-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
	<div class="relative p-4 w-full max-w-md max-h-full">
		<div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
			<div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
				<h3 class="text-lg font-semibold text-gray-900 dark:text-white">
					Annuler une sortie
				</h3>
				<button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-toggle="crud-modal">
					<svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 14 14">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
					</svg>
					<span class="sr-only">Close modal</span>
				</button>
			</div>
			<form class="p-4 md:p-5">
				<div class="grid gap-4 mb-4 grid-cols-2">
					<label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Nom de la sortie</label>
					<span class="text-sm text-gray-500 dark:text-gray-400" id="modal-outing-name"></span>

					<label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Date de la sortie</label>
					<span class="text-sm text-gray-500 dark:text-gray-400" id="modal-outing-date"></span>

					<label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Campus</label>
					<span class="text-sm text-gray-500 dark:text-gray-400" id="modal-outing-campus"></span>

					<label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Lieu</label>
					<span class="text-sm text-gray-500 dark:text-gray-400" id="modal-outing-location"></span>

					<div class="col-span-2">
						<label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Motif</label>
						<textarea id="modal-outing-reason" rows="4" class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"></textarea>
					</div>
				</div>
				<div class="grid gap-4 mb-4 grid-cols-2">
					<button type="submit" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
						Enregistrer
					</button>
					<button type="button" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" data-modal-toggle="crud-modal">
						Annuler
					</button>
				</div>
			</form>
		</div>
	</div>
</div>


<script>
document.querySelectorAll('[data-modal-toggle="crud-modal"]').forEach(function (button) {
  button.addEventListener('click', function () {
    const outingId = this.getAttribute('data-outing-id');
    if (outingId) {
      fetch(`/outing/ajax/${outingId}`)
        .then(response => response.json()) 
        .then(data => {
          document.querySelector('#modal-outing-name').textContent = data.outing_name;
          const formattedDate = data.outing_date.split('T')[0];
          document.querySelector('#modal-outing-date').textContent = formattedDate;
          document.querySelector('#modal-outing-campus').textContent = data.id_campus.campus_name;
          document.querySelector('#modal-outing-location').textContent = data.id_city.place_name;
        })
        .catch(error => console.error(error));
    }
  });
});


</script>
